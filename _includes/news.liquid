<div class="news">
  {% if site.news != blank %}
    
    <div class="awards-list">
      {% assign news = site.news | reverse %}
      {% if include.limit and page.announcements.limit %}
        {% assign news_limit = page.announcements.limit %}
      {% else %}
        {% assign news_limit = news_size %}
      {% endif %}

      {% for item in news limit: news_limit %}
        <div class="award-item">
          {% unless item.inline %}
            <div class="award-item-title">
              <a href="{{ item.url | relative_url }}" style="color: inherit; text-decoration: none;">{{ item.title }}</a>
            </div>
          {% endunless %}

          <div class="award-item-date">{{ item.date | date: "%b %d, %Y" }}</div>

          <div class="award-item-content">
            {% if item.inline %}
              {{ item.content | remove: '<p>' | remove: '</p>' | emojify }}
            {% else %}
              {{ item.description }}
            {% endif %}
          </div>
        </div>
      {% endfor %}
    </div>

  {% else %}
    <p>No news so far...</p>
  {% endif %}
</div>